{
  "compilerOptions": {
    "jsx": "react", // Use "react-jsx" if you're using the new JSX transform with React 17+
    "target": "ES6", // Specify the ECMAScript target version
    "module": "commonjs", // Specify the module code generation
    "outDir": "./dist", // Specify the output directory for JavaScript files
    "rootDir": "./src", // Specify the root directory of your TypeScript files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file casing consistency
    "baseUrl": "./src", // Specify the base directory to resolve non-relative module names
    "paths": {
      "@/*": ["*"] // Allow using "@" as a shortcut for the src directory
    }
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
